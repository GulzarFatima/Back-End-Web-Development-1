<h2>Edit Teacher</h2>

<form method="post" action="/TeacherPage/Update">

    <input type="hidden" name="id" value="@Model.TeacherId" />

    <label>First Name:</label>
    <input type="text" name="TeacherFName" value="@Model.TeacherFirstName" />

    <label>Last Name:</label>
    <input type="text" name="TeacherLname" value="@Model.TeacherLastName" />

    <label>Hire Date:</label>
    <input type="date" name="HireDate" value="@Model.HireDate.ToString("yyyy-MM-dd")" />

    <input type="submit" value="Update Teacher" />

</form>

@if (ViewBag.Error != null)
{
    <div style="color:red;">@ViewBag.Error</div>
}
